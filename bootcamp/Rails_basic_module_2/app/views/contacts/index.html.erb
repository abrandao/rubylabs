<h1>Contatos</h1>
<table>
  <thead>
    <tr>
      <th>Contato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>        
        <td><%= contact.name %></td>
        <td><%= link_to 'Show', controller: "contacts", action: "show", id: contact.id %></td>
        <td><%= link_to 'Edit',  controller: "contacts", action: "show", id: contact.id %></td>
        <td><%= link_to 'Destroy', { action: :destroy, id: contact.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>